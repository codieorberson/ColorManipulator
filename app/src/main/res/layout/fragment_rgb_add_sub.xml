<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rgb_add_sub">


    <TableRow>
        <View
            android:layout_height="50dp"></View>
    </TableRow>

    <TableRow>
        <View android:id="@+id/rgb_addorsub_box1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#BB22BB"
            android:visibility="visible"/>

        <View android:id="@+id/rgb_addorsub_box2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#44DD44"
            android:visibility="visible"/>

    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FF0800"
            android:paddingStart="88px"/>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FF0800"
            android:paddingStart="75px"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:text="  R"
            android:textColor="#FF0800"/>
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#FF0800"
            android:thumbTint="#FF0800"
            android:progress="187"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="R"
            android:textColor="#FF0800" />
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#FF0800"
            android:thumbTint="#FF0800"
            android:progress="68"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#00ff00"
            android:paddingStart="88px"/>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#00ff00"
            android:paddingStart="75px"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:text="  G"
            android:textColor="#00ff00"/>
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#00ff00"
            android:thumbTint="#00ff00"
            android:progress="34"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="G"
            android:textColor="#00ff00" />
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#00ff00"
            android:thumbTint="#00ff00"
            android:progress="221"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#0083ff"
            android:paddingStart="88px"/>
        <TextView
            android:id="@+id/rgbseekbaraddsubtext6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#0083ff"
            android:paddingStart="75px"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:text="  B"
            android:textColor="#0083ff"/>
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#0083ff"
            android:thumbTint="#0083ff"
            android:progress="187"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="B"
            android:textColor="#0083ff" />
        <SeekBar
            android:id="@+id/rgb_addsub_seekbar6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:max="255"
            android:progressTint="#0083ff"
            android:thumbTint="#0083ff"
            android:progress="68"/>
    </TableRow>

</TableLayout>