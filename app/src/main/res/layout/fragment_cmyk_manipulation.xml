            android:id="@+id/cmykseekbartext8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#000000"
            android:paddingStart="75px"/>
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:text="  K"
            android:textColor="#000000"/>
