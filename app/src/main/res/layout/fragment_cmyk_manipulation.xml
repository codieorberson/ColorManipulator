            android:id="@+id/cmyk_as_seekBar8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:progressTint="#000000"
            android:thumbTint="#000000"
            android:progress="0"/>
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/cmykhexcode1"
            android:text="#00ffff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/cmykhexcode2"
            android:text="#00ffff"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#000000"
            />
    </TableRow>

</TableLayout>