            android:id="@+id/cmyk_as_seekBar7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:progressTint="#ffff00"
            android:thumbTint="#ffff00"
            android:progress="0"/>
    </TableRow>

    <TableRow>
        <TextView
            android:id="@+id/cmykseekbartext4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#000000"
            android:paddingStart="88px"/>
